<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoadListings"
    android:orientation="vertical"


    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >





        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="271dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/videoView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_margin="8dp"
                        android:src="@raw/road1"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:id="@+id/texter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/videoView"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:fontFamily="@font/biryani_semibold"
                        android:paddingLeft="8dp"
                        android:text="Bad Road at Panshin Jos"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                </RelativeLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView

            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_margin="8dp"
                        android:id="@+id/videoView2"
                        android:src = "@raw/road3"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:paddingLeft="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/thirdText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Langtang bad road Jos"
                        android:layout_below="@+id/videoView2"
                        android:textSize="16sp"
                        android:fontFamily="@font/biryani_semibold"
                        android:textColor="@android:color/black"
                        />

                </RelativeLayout>

            </ScrollView>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_margin="8dp"
                        android:id="@+id/videoView4"
                        android:src="@raw/road4"
                        android:scaleType="fitXY"/>

                    <TextView

                        android:layout_marginStart="8dp"

                        android:id="@+id/secondText1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jos Ring Road bad road"
                        android:layout_below="@+id/videoView4"
                        android:textSize="16sp"
                        android:fontFamily="@font/biryani_semibold"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="8dp"
                        android:paddingLeft="8dp"/>

                </RelativeLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            >
